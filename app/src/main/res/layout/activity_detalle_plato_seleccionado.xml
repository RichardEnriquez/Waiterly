<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePlatoSeleccionado">

    <ImageView
        android:id="@+id/imageViewPlato"
        android:layout_width="493dp"
        android:layout_height="447dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textViewTituloPlato"
        android:layout_width="291dp"
        android:layout_height="70dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewPlato"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlato" />

    <TextView
        android:id="@+id/textViewDetallePlato"
        android:layout_width="590dp"
        android:layout_height="191dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewPlato"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPrecioPlato"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:text="$$"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewDetallePlato"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="@+id/textViewDetallePlato"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetallePlato"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/buttonAnadirCarrito"
        android:layout_width="259dp"
        android:layout_height="52dp"
        android:background="#43A047"
        android:duplicateParentState="false"
        android:text="AÃ±adir al carrito"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPrecioPlato"
        app:layout_constraintStart_toEndOf="@+id/textViewPrecioPlato"
        app:layout_constraintTop_toTopOf="@+id/textViewPrecioPlato" />

</androidx.constraintlayout.widget.ConstraintLayout>