<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewEntrante"
        android:layout_width="312dp"
        android:layout_height="270dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textViewEntranteTitulo"
        android:layout_width="170dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:text="Titulo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toEndOf="@+id/imageViewEntrante"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEntranteDescripcion"
        android:layout_width="367dp"
        android:layout_height="137dp"
        android:layout_marginStart="24dp"
        android:text="Detalle"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/imageViewEntrante"
        app:layout_constraintTop_toBottomOf="@+id/textViewEntranteTitulo" />

    <TextView
        android:id="@+id/textViewPrecio"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:text="$$"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEntrante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewEntranteDescripcion"
        app:layout_constraintTop_toTopOf="@+id/textViewEntranteDescripcion" />
</androidx.constraintlayout.widget.ConstraintLayout>